@import "default";
@import "constants";

.add-step-sidebar .add-step-sidebar-step {

	.step {
		$icon-size: 52px;

		position: relative;

		button.select {
			@include position(absolute, 0, 0);
			@include size(100%);
			border: 1px solid $def-lightgrey;
			@include border-radius(6px);
			@include transition(border-width $def-transition_duration, border-color $def-transition_duration);

			svg {
				@include position(absolute, 8px, 8px);
				@include size(10px);
				vertical-align: top;
				fill: transparent;
				@include transition(fill $def-transition_duration);
			}
		}

		.step-content {
			@include display-flex;
			padding: 13px;

			.icon {
				position: relative;
				@include flex-shrink(0);
				@include size($icon-size);
				margin-right: 15px;
				@include border-radius($def-radius);
				background-size: cover;

				&:before {
					content: "";
					@include position(absolute, 0, 0);
					z-index: -1;
					@include size(100%);
					@include border-radius(inherit);
					background-color: $def-verylightgrey;
					background-image: background_image_from_svg_content_with_styling('<%= svg("spinner") %>', "circle {stroke: #{rgba($def-grey, 0.99)};}");
					background-position: center;
					background-repeat: no-repeat;
				}
			}

			.details {
				@include flex-grow(1);
				@include display-flex;
				@include flex-direction(column);
				height: $icon-size;
				overflow: hidden;
				font-size: 13px;

				h4 {
					@include display-flex;
					@include flex-shrink(0);
					@include align-items(center);
					margin-top: 0;
					margin-bottom: 2px;
					font-weight: 900;

					span.step-badge svg {
						display: inline-block;
						vertical-align: sub;
						@include size(20px);
						margin-left: 5px;
					}
				}

				.summary {
					@include flex-shrink(0);
					margin-bottom: auto;
					line-height: 18px;
					overflow: hidden;
					font-weight: 200;
					color: $def-grey;

					a {
						position: relative;
						color: $def-green;
						@include transition(color $def-transition_duration);

						&:hover, &:focus {
							color: $def-green-shade;
						}
					}

					&:not(.ninja) > p {
						margin-top: 0;
					}
				}
			}
		}

		button.select:hover, button.select:focus {
			border-width: 2px;
			border-color: $def-green;

			svg {
				fill: $def-green;
			}
		}
	}
}
