@import "default";
@import "constants";

.auto-code-signing {
	header {
		@include display-flex;
		@include align-items(center);
		$spacing: 36px;

		.icon {
			@include margin-x($spacing);
			svg {
				display: block;
				@include size(32px, 41px);
				fill: $def-yellow;
			}
		}

		.summary {
			@include padding-y(15px);
			max-width: 580px;
			margin-right: auto;

			h2 {
				margin-top: 0;
				margin-bottom: 5px;
				font-size: 19px;
				font-weight: 700;
				line-height: 1.26;
				color: $def-darkgrey;
			}

			p {
				@include margin-y(0);
				font-size: 16px;
				font-weight: 500;
				color: $def-darkgrey;
				line-height: 1.5;
			}
		}

		.manual-code-signing {
			margin-left: $spacing;
			border: none;
			padding: 0;
			font-size: 16px;
			font-weight: 500;
			line-height: 1.5;
			background-color: transparent;
			color: $def-violet_blue;

			&:hover, &:focus {
				text-decoration: underline;
			}
		}

		@include media-below-mid {
			@include align-items(flex-start);
			@include flex-direction(column);

			.icon {
				@include margin-y($spacing);
			}

			.manual-code-signing {
				margin-left: 0;
				margin-top: $spacing;
			}
		}
	}

	.auto-code-signing-body {
		.step {
			$icon-size: 48px;
			$borderradius: 6px;
			$verticalpadding: 15px;
			$horizontalpadding: 20px;
			$padding: $verticalpadding $horizontalpadding;

			margin-top: 25px;

			.upcoming {
				@include display-flex;
				@include align-items(center);
				@include border-radius($borderradius);
				padding: $padding;
				background-color: $def-lightgrey;

				.icon {
					@include flex-shrink(0);

					svg {
						@include size(48px);
						fill: $def-mediumdarkgrey;
					}
				}

				.text {
					margin-left: $horizontalpadding;
					color: $def-mediumdarkgrey;
				}
			}

			.active {
				@include border-radius($borderradius);
				border: 3px solid $def-green-neon;

				.step-header {
					@include display-flex;
					@include border-top-radius($borderradius);
					padding: $padding;
					background-color: $def-green-neon-light;

					.icon {
						@include flex-shrink(0);
						margin-left: 3px;

						svg {
							@include size($icon-size);
							fill: $def-green-light-neon;
						}
					}

					.text {
						margin-left: 20px;

						strong {
							display: block;
							font-size: 18px;
							color: $def-green-light-neon;
							font-weight: 500;
						}

						em {
							display: block;
							font-size: 18px;
							font-style: normal;
							font-weight: 200;
							color: $def-mediumdarkgrey;
						}
					}
				}

				.step-body {
					padding: $padding;
					padding-left: $horizontalpadding + $icon-size + $horizontalpadding;
					background-color: white;
				}
			}

			.completed {
				@include display-flex;
				@include align-items(center);
				border: 3px solid $def-green-neon-light;
				@include border-radius(6px);
				padding: $padding;
				overflow: hidden;
				background-color: $def-green-neon-light;

				.icon {
					@include flex-shrink(0);
					@include display-flex;
					@include justify-content(center);
					@include align-items(center);
					@include size($icon-size);
					@include border-radius(50%);
					background-color: $def-green-light-neon;

					svg {
						@include size(20px);
						fill: white;
					}
				}

				.text {
					margin-left: $horizontalpadding;
					font-size: 18px;
					color: $def-mediumdarkgrey;
					font-weight: 400;
				}
			}
		}

		.step.upload-certificate {

			p:not(.notification) {
				font-size: 16px;
				font-weight: 200;
				color: $def-verydarkgrey;

				strong {
					font-weight: 700;
				}
			}

			.snippet {
				display: flex;
				border-radius: $def-radius;
				overflow: hidden;

				pre {
					@include margin-y(0);
					padding: 12px;
					overflow: hidden;
					background-color: #2c3e50;
					color: #ececec;
				}

				.copy-snippet {
					padding: 12px 16px;
					background-color: $def-green-light-neon;

					svg {
						display: block;
						@include size(16px);
						fill: white;
					}
				}
			}

			.certificates {
				header {
					display: none;
				}

				.notification, .file-upload {
					@include margin-x(0);
				}

				.file-uploader {
					padding: 30px;
					border-color: $def-mediumlightgrey;

					.content {
						font-size: 16px;
						color: $def-verydarkgrey;
					}
				}

				.uploaded-file {
					border: 1px solid $def-mediumlightgrey;
					border-radius: $def-radius;
					padding: 18px;
				}
			}

			button.next {
				min-width: 160px;
			}
		}

		.step.connect-apple-developer-account {

			h2 {
				font-size: 19px;
				font-weight: 500;
				color: $def-verydarkgrey;
			}

			p:not(.notification) {
				font-size: 16px;
				font-weight: 200;
				color: $def-verydarkgrey;
			}

			section {
				margin-bottom: 20px;
			}

			input[type="text"], input[type="password"] {
				@include box-sizing(border-box);
				border: 1px solid $def-grey;
				border-radius: $def-radius;
				padding: 10px;
			}

			form {
				width: 400px;

				label {
					display: block;
					margin-bottom: 6px;
				}

				input[type="text"], input[type="password"], input[type="submit"] {
					width: 100%;
				}
			}
		}

		.step.select-team {
			.team {
				margin-top: 20px;
				border: 1px solid $def-mediumlightgrey;
				border-radius: $def-radius;
				padding: 20px;
				text-align: left;

				&:hover, &:focus {
					border-color: $def-violet_blue;
				}

				&.active {
					background-color: $def-green-neon-light;
				}

				.id {
					display: block;
					margin-top: 6px;
				}
			}

			.action {
				display: block;
				min-width: 160px;
				margin-top: 20px;
			}
		}

		.final-step {
			@include padding-y(60px);
			text-align: center;
			color: $def-darkbluegrey;

			h2 {
				margin-bottom: 24px;
				font-size: 34px;
				font-weight: 700;
			}

			p {
				margin-bottom: 34px;
				font-size: 16px;
				font-weight: 500;
			}

			ol {
				@include display-flex;
				@include flex-direction(column);
				@include justify-content(center);
				@include align-items(center);
				font-size: 16px;
				font-weight: 500;

				li {
					margin-bottom: 20px;
				}
			}
		}
	}
}
