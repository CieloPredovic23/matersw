@import "default";
@import "constants";

.popup {
	$transitionduration: 0.3s;

	z-index: $zindex-popup;
	@include position(fixed, 0, 0);
	@include display-flex;
	@include flex-direction(column);
	@include justify-content(center);
	@include align-items(center);
	@include size(100%);
	background-color: rgba(black, 0.5);

	&.ng-hide {
		background-color: rgba(black, 0);

		.popup-body {
			top: 100%;
		}
	}

	&.ng-animate {
		@include transition(background-color $transitionduration ease);

		.popup-body {
			@include transition(top $transitionduration ease);
		}
	}

	.popup-body {
		position: relative;
		top: 0%;
		width: 600px;
		@include max-size(90%);
		overflow: hidden;
	}

	.popup-body.snowflake {
		$padding-x: 16px;
		$padding-y: 14px;
		$padding: $padding-x $padding-y;

		@include display-flex;
		@include flex-direction(column);
		@include border-radius(6px);
		text-align: center;
		background-color: white;

		header {
			padding: $padding;
			font-size: 16px;
			font-weight: 400;

			h2 {
				font-size: inherit;
				font-weight: inherit;
			}

			&.left-aligned {
				text-align: left;
			}

			&.closeable {
				$close_button_width: 12px;
				$close_button_height: 12px;

				position: relative;
				padding-right: $close_button_width + (2 * $padding-x);

				.popup-close {
					position: absolute;
					top: 50%;
					right: $padding-x;
					margin-top: - $close_button_width / 2;

					svg {
						@include size($close_button_width, $close_button_height);
						display: block;
						fill: #7f7f7f;
					}

					&:hover {
						cursor: pointer;

						svg {
							fill: $def-verydarkgrey;
						}
					}
				}

				&:not(.left-aligned) {
					@include padding-x($close_button_width + (2 * $padding-x));
				}
			}
		}

		header + article {
			padding-top: 0;
		}

		article {
			@include flex-grow(1);
			padding: $padding;
			text-align: left;
		}

		footer {
			@include flex-shrink(0);
			@include display-flex;

			button, a {
				@include flex-grow(1);
				@include border-radius(0);
			}
		}
	}

	.popup-body#default-alert-popup-body, .popup-body#default-confirm-popup-body {
		overflow: visible;
		text-align: center;

		&:before {
			$size: 68px;

			content: "";
			position: relative;
			display: block;
			@include size($size);
			margin-bottom: - $size / 2;
			@include margin-x(auto);
			@include border-radius($size / 2);
			background-position: center;
			background-repeat: no-repeat;
		}

		article {
			@include border-top-radius(6px);
			padding: 25px 15px;
			padding-top: 55px;
			overflow: hidden;
			background-color: white;

			h2 {
				@include margin-y(0);
				font-size: 16px;
				font-weight: 600;
			}

			h2:not(:last-child) {
				margin-bottom: 20px;
			}

			p {
				margin-top: 0;
				font-size: 12px;
				font-weight: 200;
				color: $def-grey;

				a {
					color: $def-green;
				}

				a:not(:hover):not(:focus) {
					text-decoration: none;
				}
			}
		}

		footer {
			@include display-flex;
			@include border-bottom-radius(6px);
			overflow: hidden;

			button {
				@include flex-grow(1);
				padding: 20px 10px;
				font-size: 16px;
				font-weight: 300;
				color: white;
				@include transition(background-color $def-transition_duration);
			}
		}
	}

	.popup-body#default-alert-popup-body.success {

		&:before {
			background-image: background_image_from_svg_content_with_attributes('<%= svg("check") %>', (
				fill: rgba(white, 0.99)
			));
			background-size: auto 16px;
			background-color: $def-green;
		}

		article {

			h2 {
				color: $def-green;
			}
		}

		footer {

			button {
				background-color: $def-green;
			}

			button:hover, button:focus {
				background-color: $def-green-shade;
			}
		}
	}

	.popup-body#default-alert-popup-body.error, .popup-body#default-confirm-popup-body {

		&:before {
			background-image: background_image_from_svg_content_with_attributes('<%= svg("cross") %>', (
				fill: rgba(white, 0.99)
			));
			background-size: auto 16px;
			background-color: $def-danger;
		}

		article {

			h2 {
				color: $def-danger;
			}
		}

		footer {

			button {
				background-color: $def-danger;
			}

			button:hover, button:focus {
				background-color: $def-danger-shade;
			}
		}
	}

	.popup-body#default-alert-popup-body.notice {

		&:before {
			background-image: background_image_from_svg_content_with_attributes('<%= svg("bulb") %>', (
				fill: rgba(white, 0.99)
			));
			background-size: auto 34px;
			background-color: $def-blue;
		}

		article {

			h2 {
				color: $def-blue;
			}
		}

		footer {

			button {
				background-color: $def-blue;
			}

			button:hover, button:focus {
				background-color: $def-blue-shade;
			}
		}
	}

	.popup-body#default-confirm-popup-body {
		button.yes {
			background-color: $def-green;
		}

		button.yes:hover, button.yes:focus {
			background-color: $def-green-shade;
		}

		button.no {
			background-color: $def-danger;
		}

		button.no:hover, button.no:focus {
			background-color: $def-danger-shade;
		}
	}
}
