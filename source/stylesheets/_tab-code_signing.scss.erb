@import "default";
@import "constants";

.tab-code-signing {
	$section-horizontalspacing: 40px;

	section.certificate-help {
		position: relative;
		@include margin-y(30px);
		padding: 25px $section-horizontalspacing;
		background-color: $def-green-ultralight;

		ul {
			@include margin-y(0);
			padding-left: 0;
			list-style: none;

			li {
				@include display-flex;

				&:before {
					content: "";
					@include flex-shrink(0);
					width: 50px;
					margin-right: 20px;
					background-position: center top 5px;
					background-repeat: no-repeat;
				}

				h2 {
					margin-top: 0;
					margin-bottom: 4px;
					font-size: 18px;
					font-weight: 500;
					color: $def-green;
				}

				p {
					margin-top: 0;
					margin-bottom: 10px;
					font-size: 14px;
					font-weight: 200;
					color: $def-darkgrey;
				}

				code {
					display: block;
					@include border-radius($def-radius);
					padding: 8px 18px;
					word-break: break-all;
					background-color: $def-green-verylight;
				}
			}

			li:not(:last-child) {
				margin-bottom: 25px;
			}

			li.codesigndoc {

				&:before {
					$svg_content_with_attributes: svg_content_with_attributes('<%= svg("code_signing/icon-codesigndoc") %>', (
						fill: rgba($def-green, 0.99)
					));

					background-image: url('data:image/svg+xml;utf8, #{ $svg_content_with_attributes }');
					background-size: 30px auto;
				}
			}

			li.upload {

				&:before {
					$svg_content_with_attributes: svg_content_with_attributes('<%= svg("code_signing/icon-upload") %>', (
						fill: rgba($def-green, 0.99)
					));

					background-image: url('data:image/svg+xml;utf8, #{ $svg_content_with_attributes }');
					background-size: 36px auto;
				}
			}

			li.add-step {

				&:before {
					$svg_content_with_attributes: svg_content_with_attributes('<%= svg("code_signing/icon-add_step") %>', (
						fill: rgba($def-green, 0.99)
					));

					background-image: url('data:image/svg+xml;utf8, #{ $svg_content_with_attributes }');
					background-size: 37px auto;
				}
			}
		}

		button.hide {
			@include position(absolute, 20px, 20px);
			opacity: 0.5;
			@include transition(opacity, $def-transition_duration);

			svg {
				@include size(15px);
				fill: black;
			}
		}

		button.hide:focus, button.hide:hover {
			opacity: 1.0;
		}
	}

	section.cardo, section.progress-indicator {
		margin: 20px $section-horizontalspacing;
	}
		
	section.cardo {

		header {
			@include display-flex;
			@include justify-content(space-between);

			.title {
				margin-bottom: 0;
			}
		}

		article {
			padding: 0;

			p.progress-indicator, p.notification {
				@include margin-x($cardo-horizontalpadding);
			}
		}

		ul.uploaded-files {
			@include margin-y(0);
			padding-left: 0;
		}
	
		.uploaded-file {
			@include display-flex;
			@include align-items(flex-start);
			padding: 12px $cardo-horizontalpadding;
			border-bottom: 1px solid $def-mediumlightgrey;
	
			.details {
				@include display-flex;
				@include align-items(flex-start);
				@include box-sizing(border-box);
				overflow: hidden;
				padding: 5px 8px;
				font-size: 14px;
	
				&:before {
					content: "";
					@include flex-shrink(0);
					@include size(30px, 40px);
					margin-right: 15px;
					background-size: contain;
					background-position: center;
					background-repeat: no-repeat;
				}

				.first-column {

					.name, .uuid, .expiry-date-and-time {
						@include ellipsis-oneliner;
						font-size: 14px;
						font-weight: 500;
						display: inline-block;
					}

					.name {
						color: #464646;
						display: block;
						margin-right: 15px
					}

					.uuid {
						padding: 5px 7px;
						margin: 5px 0;
						border-radius: 1px;
						background-color: #d9fff4;
						font-family: "Source Code Pro", monospace;
					}

					.expiry-date-and-time {

						.warning-message {
							padding: 7px 12px;
							text-transform: uppercase;
							border-radius: 3px;
							color: #f17420;
							background-color: #ffeadc;
							display: inline-block;
						}

						time {
							font-weight: 300;
							color: #464646;
						}
					}

					p.progress-indicator {
						margin-left: 0;
						margin-bottom: 0;
					}
				}

				.second-column {
					width: 100%;

					.export-type, .team-data, .bundle-id {

						span {
							color: #464646;
						}
					}

					.team-data {
						@include display-flex;
						padding: 5px 0px;

						.name-and-id {
							padding-left: 5px;
						}
					}
				}
			}
			
			.expose {
				width: $content_is_expose-width;
				position: relative;
	
				label {
					display: none;
				}

				.popover {
					top: 100%;

					&:before {
						left: 8px;
					}
				}
			}
	
			.actions {
				@include display-flex;
				@include flex-shrink(0);
				@include justify-content(flex-end);
				margin-left: auto;

				.menu-selector {
					position: relative;

					.menu-icon {

						&:hover svg {
							fill: $def-darkgrey;
						}
						 
						svg {
							@include size(26px, 21px);
							fill: #999999;
						}
					}

					.menu {
						@include display-flex;
						@include flex-direction(column);
						@include align-items(flex-start);
						@include position(absolute, 100%, 0);
						width: 180px;
						z-index: $zindex-popover;
						margin-top: 10px;
						margin-bottom: 0;
						border: 1px solid $def-lightgrey;
						@include border-radius(5px);
						padding-left: 0;
						overflow: hidden;
						list-style: none;
						@include box-shadow(0px 0px 10px 0px rgba(0, 0, 0, 0.2));

						a, button {
							width: 100%;
							padding: 15px 12px;
							font-size: 12px;
							font-weight: 500;
							text-align: left;
							text-decoration: none;
							color: #767676;
							background-color: white;
							border-bottom: 1px solid $def-lightgrey;

							&.delete {
								color: #f17420;
								border-bottom: none;
							}

							&:hover {
								background-color: $def-ultralightgrey;
							}
						}
					}
				}
			}
		}
	
		.file-upload {
			margin: 12px $cardo-horizontalpadding;
	
			.file-uploader {
				position: relative;
				border: 4px dashed $def-mediumlightgrey;
				@include border-radius($def-radius);
				padding: 18px;
	
				input[type="file"] {
					@include position(absolute, 0, 0);
					z-index: $zindex-file_uploader_input;
					@include size(100%);
					font-size: 0;
					opacity: 0;
					cursor: pointer;
				}
	
				input[type="submit"] {
					@include position(absolute, 0, 0);
					@include size(0);
					border: none;
					padding: 0;
					opacity: 0;
				}
	
				.content {
					text-align: center;
					font-size: 12px;
					opacity: 0.5;
					color: $def-verydarkgrey;
					@include transition(opacity, $def-transition_duration);
	
					strong {
						display: block;
						margin-bottom: 4px;
						font-weight: 500;
					}
	
					em {
						display: block;
						font-weight: 200;
					}
				}
	
				input[type="file"]:disabled {
					cursor: not-allowed;
				}
	
				input[type="file"]:not(:disabled):hover ~ .content, input[type="file"]:not(:disabled):focus ~ .content {
					opacity: 1.0;
				}
			}
		}

		@include media-above-inclusive-huge {
			$header_is_expose_inclusive_huge-width: 26%;
			$details-width: 100% - $header_is_expose-inclusive-huge-width;
			$content_is_expose-width: $header_is_expose-inclusive-huge-width - 3%;

			header {
				.title {
					width: 100% - $header_is_expose_inclusive_huge-width;
				}

				.expose {
					width: $header_is_expose_inclusive_huge-width;

					.short-version {
						display: none;
					}
				}
			}

			ul.uploaded-files > li.uploaded-file, .uploaded-file {

				.details {
					width: $details-width;

					.first-column {
						min-width: 400px;
					}
				}

				.expose {
					width: $content_is_expose-width;
				}

				.actions {
					width: 100% - ($details-width + $content_is_expose-width);
				}
			}
		}

		@include media-below-huge {
			$header_is_expose_below_huge-width: 19%;
			$details-width: 100% - $header_is_expose_below_huge-width;
			$content_is_expose-width: $header_is_expose_below_huge-width - 3%;

			header {
				
				.title {
					width: 100% - $header_is_expose_below_huge-width;
				}

				.expose {
					width: $header_is_expose_below_huge-width;

					.long-version {
						display: none;
					}
				}
			}

			ul.uploaded-files > li.uploaded-file, .uploaded-file {

				.details {
					width: $details-width;

					.first-column {
						min-width: 360px;
					}
				}

				.expose {
					width: $content_is_expose-width;
				}

				.actions {
					width: 100% - ($details-width + $content_is_expose-width);
				}
			}
		}

		@include media-below-big {
			
			header {

				.title {
					width: 100%;
				}

				.password, .expose {
					display: none;
				}
			}

			article {

				ul.uploaded-files > li.uploaded-file, .uploaded-file {
					@include flex-direction(column);

					.details, .expose, .actions {
						@include justify-content(center);
						width: 100%;
						margin-top: 6px;
					}

					.details {
						@include flex-direction(column);
						@include justify-content(center);
						text-align: center;

						&:before {
							@include align-self(center);
							margin-right: 0;
							margin-bottom: 8px;
						}

						.first-column, .second-column {
							@include display-flex;
							@include flex-direction(column);
							@include align-items(flex-start);
							text-align: left;
							min-width: 0;
							width: 100%;

							.name, .uuid, .expiry-date-and-time, .export-type, .team-data, .bundle-id {
								margin: 7px 0;
								min-width: 0;
								width: 100%;
								overflow: visible;
								white-space: normal;
							}

							.uuid {
								width: auto;
							}
						}

						.first-column {

							.name {
								margin-right: 0;
								text-align: center;
							}

							p.progress-indicator {
								margin: 0 auto;
							}
						}

						.file-data {
							@include ellipsis-oneliner;
							width: 100%;

							em {
								@include display-flex;
								@include justify-content(center);

								code {
									@include ellipsis-oneliner;
								}
							}
						}
					}

					.password-edit {
						@include flex-direction(column);
						width: auto;
						min-width: 200px;
						margin-top: 10px;

						form.password {
							@include justify-content(center);
							@include flex-wrap(wrap);
							margin-bottom: 6px;
							width: 100%;

							.input-with-show-password {
								width: 100%;
							}

							input:not([type="submit"]) {
								width: 100%;

								&:not(:last-child) {
									margin-bottom: 6px;	
								}
							}

							.change-password-actions {
								width: 100%;

								input.submit {
									margin-left: 0;
								}

								input.ok, button.cancel {
									@include flex-grow(1);
								}
							}
						}
					}

					.expose {
						@include display-flex;
						width: auto;

						.checkbox {
							width: 36px;
							height: 16px;

							.checkbox-svg-wrapper {

								svg[check] {
									width: 10px;
									height: 9px;
									top: 3px;
									left: 4px;
								}
								
								svg[cross] {
									width: 8px;
									height: 8px;
									top: 4px;
									left: 5px;
								}
							}
						}

						label {
							display: block !important;
							@include ellipsis-oneliner;
							font-size: 12px;
							margin-left: 8px;
						}

						.popover {
							margin-top: 10px;
						}
					}

					.actions {
						@include align-self(center);
						margin-top: 10px;

						.menu-selector .menu {
							right: -78px;
						}
					}
				}

				code {
					word-wrap: break-word;
				}
			}
		}

		@include media-below(520px) {
			article {
				
				ul.uploaded-files > li.uploaded-file, .uploaded-file {
					
					.details { 

						.name, .uuid, .expiry-date-and-time, .export-type, .team-data, .bundle-id {
							@include display-flex;
							@include flex-direction(column);
							margin: 0;
						}

						.team-data .name-and-id {
							padding-left: 0;
						}
					}
				}
			}
		}
	}

	section.provisioning-profiles {

		ul.uploaded-files {

			li.uploaded-file {

				.details:before {
					background-image: image-url("code_signing/prov-profile-green.svg");
				}
			}
		}
	}

	section.code-signing-identities {

		header {
			$title-width: 35%;
			$password-width: 31%;

			.title {
				width: $title-width;
			}

			.password {
				width: $password-width;
				margin-bottom: 0;
			}
		}

		ul.uploaded-files {

			li.uploaded-file {
				$details-width: 35%;
				$password-width: 31%;

				.details {
					width: $details-width;

					&:before {
						background-image: image-url("code_signing/code-sign-purple.svg");
					}
				}

				.password-edit {
					@include display-flex;
					@include align-items(center);
					width:	$password-width;

					form.password {
						@include display-flex;

						.input-with-show-password {
							@include display-flex;
							position: relative;
							max-width: 170px;

							.eye-checkbox {
								position: absolute;
								z-index: 0;
								right: 0;

								input[type="checkbox"]:checked ~ .checkbox-svg-wrapper span.crossed-eye, input[type="checkbox"]:not(:checked) ~ .checkbox-svg-wrapper span.eye {
									display: none;
								}

								span.eye, span.crossed-eye {
									@include size(26px);
									margin-left: 3px;
									margin-top: 5px;

									svg {
										@include size(22px , 14px);
										fill: #757575;
										display: block;
									}
								}
							}

							input.password-input {
								border: 1px solid $def-mediumlightgrey;
								@include border-radius($def-radius);
								padding: 4px;
								padding-right: 32px;
								background-color: $def-verylightgrey;
								font-size: 14px;
								min-width: 135px;
							}
						}

						input:not([type="submit"]) {
							border: 1px solid $def-mediumlightgrey;
							@include border-radius($def-radius);
							padding: 4px;
							padding-right: 32px;
							background-color: $def-verylightgrey;
							font-size: 14px;
						}

						.change-password-actions {
							@include display-flex;

							input.submit, button {
								margin-left: 6px;
								font-size: 10px;
							}
						}
					}
				}
			}
		}
	}

	section.generic-files, section.android-keystore {

		.uploaded-file {

			.details {

				&:before {
					background-image: image-url("code_signing/generic-file-green.svg");
				}

				em.download-url-env-var-key {
					display: block;
					font-size: 12px;
					font-style: normal;
					font-weight: 200;

					code {
						display: inline-block;
						@include border-radius($def-radius);
						padding: 3px;
						background-color: $def-verylightgrey;
						color: $def-purple;
					}
				}
			}
		}

		.file-upload, form.keystore-metadata {

			p {
				margin-top: 0;
				margin-bottom: 10px;
				font-size: 14px;
				font-weight: 200;
			}

			input.env-var {
				display: block;
				@include box-sizing(border-box);
				width: 100%;
				margin-bottom: 10px;
				border: 1px solid $def-mediumlightgrey;
				@include border-radius($def-radius);
				padding: 10px 18px;
				font-size: 14px;
				font-weight: 200;
			}

			p.progress-indicator, p.notification {
				@include margin-x(0);
				margin-bottom: 10px;
			}
		}
	}

	section.generic-files {

		li.uploaded-file {

			.details:before {
				background-image: image-url("code_signing/generic-file-green.svg");
			}
		}

		.file-upload {

			code.env-var {
				display: block;
				line-height: 180%;
				margin-bottom: 10px;
				border: 1px solid $def-mediumlightgrey;
				@include border-radius($def-radius);
				padding: 10px 18px;
				font-size: 14px;
				font-weight: 200;
				color: $def-purple;
				background-color: $def-verylightgrey;
			}
		}
	}

	section.android-keystore {

		.uploaded-file {

			.details:before {
				background-image: image-url("code_signing/code-sign-purple.svg");
			}
		}

		form.keystore-metadata {
			padding: 12px $cardo-horizontalpadding;

			section {
				margin-bottom: 25px;

				code.env-var {
					@include border-radius($def-radius);
					padding: 3px;
					font-weight: 200;
					color: $def-purple;
					background-color: $def-verylightgrey;
				}

				.show-password {
					@include display-flex;
					@include align-items(center);

					label {
						margin-left: 8px;
						font-size: 12px;
					}
				}
			}

			.save, .reset {
				display: block;
				width: 500px;
				max-width: 100%;

				&:not(:last-child) {
					margin-bottom: 10px;
				}
			}
		}
	}

}
