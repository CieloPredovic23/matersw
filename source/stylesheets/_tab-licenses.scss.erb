@import "default";
@import "constants";

.tab-licenses {
  .lead {
    font-size: 19px;
    line-height: 28px;
    margin-bottom: 32px;

    a {
      color: #9247C2;
      text-decoration: underline;

      &:hover,
      &:focus {
        color: #5C2A7E;
      }
    }
  }

  .cardo {
    article:not(.unpadded) {
      padding: 24px;
    }

    section {
      margin-bottom: 24px;
      padding-bottom: 24px;
      border-bottom: 1px solid #DFDAE1;

      h4 {
        font-size: 19px;
        line-height: 28px;
        margin-bottom: 8px;
      }

      &:last-child {
        margin-bottom: 0;
        padding-bottom: 0;
        border: none;
      }
    }
  }
}
