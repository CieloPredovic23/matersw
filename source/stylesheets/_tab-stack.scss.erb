@import "default";
@import "constants";

.tab-stack {
	$content-spacing: 10px;

	.stack-settings {
		margin-bottom: 30px;

		article {
			@include padding-y(0);

			section {
				@include padding-y(18px);

				.max-width-wrapper {
					max-width: 550px;
				}
			}
		}

		.notification.stack-error {
			margin-top: 0;
			margin-bottom: $content-spacing;
		}

		.stack-selector-wrapper {
			margin-bottom: $content-spacing;

			.stack-selector {
				width: 100%;
			}
		}

		.stack-info {
			@include display-flex;
			@include align-items(flex-start);
			width: 100%;
			$icon-size: 18px;
			$spacing: 8px;

			.info-badge-wrapper {
				@include margin-x(14px);

				svg {
					display: block;
					@include size($icon-size);
				}
			}

			.stack-info-text {
				@include flex-grow(1);

				.stack-description {
					line-height: 1.5;
					margin-top: 0;
					margin-bottom: $spacing;
					font-size: 13px;
					font-weight: 400;
					color: $def-darkgrey;

					&:not(.ninja) > p:first-child {
						margin-top: 0;
					}
				}

				.stack-info-link {
					font-size: 15px;
					font-weight: 500;
					color: $def-green;

					&:not(:last-child) {
						margin-bottom: 6px;
					}

					&:hover, &:focus {
						text-decoration: underline;
					}
				}

				a.stack-info-link {
					text-decoration: none;
				}
			}
		}

		.docker-image-settings {
			margin-top: 18px;

			.docker-image-label, .den-tag-label {
				display: block;
				margin-bottom: 4px;
				font-size: 13px;
				font-weight: 700;
			}

			.docker-image, .den-tags {
				display: block;
				@include box-sizing(border-box);
				width: 100%;
				border: 1px solid $def-mediumlightgrey;
				@include border-radius($def-radius);
				padding: 7px 12px;
				font-size: 13px;

				&:disabled {
					color: $def-grey;
				}
			}
		}

		.machine-type-settings {
			border-top: 1px solid $def-mediumlightgrey;

			.machine-type-header {
				font-size: 19px;
				font-weight: bold;
				font-style: normal;
				font-stretch: normal;
				line-height: normal;
				letter-spacing: 0.08px;
				color: #222222;
				margin-top: 0;
				margin-bottom: 0;
			}

			.machite-type-tag {
				margin: 16px 0;

				.title {
					text-transform: capitalize;
					font-size: 16px;
					font-weight: 700;
					color: $def-darkgrey;
					margin-right: 16px;
				}

				.subtitle {
					font-size: 13px;
					font-weight: 500;
					color: $def-mediumdarkgrey;
				}
			}

			.machine-types {
				display: flex;
				flex-direction: row;
				flex-wrap: wrap;
				margin-top: 16px;

				.machine-type-wrapper {
					position: relative;
					display: flex;
					flex-direction: row;
					width: 100%;
					max-width: 380px;
					min-width: 225px;
					padding: 12px;
					margin-right: 18px;
					border-radius: 8px;
					border: 1px solid $def-grey;

					.machine-type-data {
						display: flex;
						flex-direction: column;
						justify-content: space-around;
						margin-left: 16px;
						width: 100%;
						overflow: hidden;

						.top {
							display: flex;
							align-items: center;
							width: 100%;

							.icon-and-name-and-note {
								display: flex;
								align-items: center;
								margin-right: 12px;

								.stack-type-icon {
									display: flex;
									margin-right: 8px;

									svg {
										width: 16px;
										height: 18px;
										fill: $def-darkgrey;
									}
								}

								.name {
									font-size: 20px;
									font-weight: bold;
									font-style: normal;
									font-stretch: normal;
									line-height: 1;
									letter-spacing: 0.08px;
									color: $def-darkgrey;
									@include ellipsis-oneliner;
									margin-right: 8px;
								}

								.tag {
									border-radius: 4px;
									background-color: $def-grey;
									color: #ffffff;
									text-transform: uppercase;
									font-size: 10px;
									letter-spacing: .8px;
									font-weight: 500;
									padding: 1px 6px;

									&.gen2 {
										background-color: $def-green-shade;
									}
								}

								.note {
									position: absolute;
									top: -12px;
									right: 10px;
									padding: 4px 6px;
									padding-top: 5px;
									border-radius: 4px;
									font-size: 12px;
									font-weight: 500;
									font-style: normal;
									font-stretch: normal;
									line-height: normal;
									text-transform: uppercase;
									color: $def-darkbluegrey;
									background-color: $def-yellow;
								}
							}

							.credit-per-min {
								width: 100%;
								text-align: right;

								.value, .unit {
									font-size: 16px;
									font-weight: bold;
									font-style: normal;
									font-stretch: normal;
									line-height: initial;
									letter-spacing: 0.07px;
									color: $def-darkgrey;
									@include ellipsis-oneliner;
								}
							}
						}

						.separator {
							height: 1px;
							margin-bottom: 3px;
							background-color: $def-verylightgrey;
						}

						.bottom {
							display: flex;
							align-items: center;
							width: 100%;

							.cpu {
								display: flex;
								align-items: center;
								margin-right: 12px;

								.count, .at, .description {
									font-size: 16px;
									font-weight: 500;
									font-style: normal;
									font-stretch: normal;
									line-height: 1.19;
									letter-spacing: 0.07px;
									color: $def-darkgrey;
									@include ellipsis-oneliner;
								}

								.at {
									margin-left: 2px;
									margin-right: 2px;
								}
							}

							.ram {
								width: 100%;
								font-size: 16px;
								font-weight: 500;
								font-style: normal;
								font-stretch: normal;
								line-height: 1.19;
								letter-spacing: 0.07px;
								text-align: right;
								color: $def-darkgrey;
								@include ellipsis-oneliner;
							}
						}
					}

					.machine-type-icon {
						display: flex;
						align-items: center;

						svg {
							top: 0px;
							@include size(70px, 70px);
							fill: $def-darkgrey;
						}
					}

					&.not-available {
						opacity: 0.7;
					}

					&.selected:not(.not-available) {
						border: 1px solid $def-violet_blue;
						background-color: $def-light-grape;

						.machine-type-data {

							.top, .bottom {

								.name, .count, .at, .description, .ram, .value, .unit {
									color: $rebo-purple-gradient-hover-bottom;
								}

								.stack-type-icon svg {
									fill: $rebo-purple-gradient-hover-bottom;
								}
							}

							.separator {
								background-color: $def-violet_blue;
							}
						}

						.machine-type-icon svg {
							fill: $rebo-purple-gradient-hover-bottom;
						}
					}

					&:not(.selected):not(.not-available):hover {
						cursor: pointer;
						border: 1px solid $def-violet_blue;
						background-color: $def-light-grape;

						.machine-type-data {

							.top, .bottom {

								.name, .count, .at, .description, .ram, .value, .unit {
									cursor: pointer;
									color: $def-violet_blue;
								}

								.stack-type-icon svg {
									fill: $def-violet_blue;
								}
							}

							.separator {
								background-color: $def-violet_blue;
							}
						}

						.machine-type-icon svg {
							fill: $def-violet_blue;
						}
					}

					@include media-below-mid {

						.machine-type-data {
							.separator {
								margin-top: 9px;
								margin-bottom: 9px;
							}

							.top, .bottom {
								flex-direction: column;
								align-items: flex-start;

								.icon-and-name-and-note {
									margin-right: 0;
								}

								.credit-per-min, .ram {
									text-align: left;
								}

								.cpu {
									flex-direction: column;
									align-items: flex-start;
									margin-right: 0;
								}

								.at {
									display: none;
								}

								.name, .note, .credit-per-min .cpu {
									margin-bottom: 6px;
								}
							}
						}
					}

					@media only screen and (max-width: 360px) {
						min-width: auto;

						.machine-type-icon {
							display: none;
						}
					}
				}
			}
		}
	}

	.stack-settings.default {

		header {

			.header-description {

				a {
					font-weight: 600;
					color: inherit;

					&:hover, &:focus {
						color: $def-green;
					}
				}
			}
		}
	}

	.stack-settings.workflow-specific {

		article {

			.workflow {

				&:not(:last-child) {
					border-bottom: 1px solid $def-mediumlightgrey;
				}

				.workflow-header {
					margin-top: 0;
					margin-bottom: $content-spacing;
					font-size: 16px;
					color: $def-darkgrey;
					font-weight: 400;

					.workflow-id {
						font-weight: 700;
					}
				}

				.stack-selector-wrapper {
					position: relative;

					&:not(.default) label.default-stack {
						display: none;
					}

					&.default {

						.stack-selector {
							padding-right: 90px;
						}

						label.default-stack {
							$badge-height: 14px;

							@include position(absolute, 50%, 30px);
							@include box-sizing(border-box);
							line-height: $badge-height;
							margin-top: - $badge-height / 2;
							@include border-radius($badge-height / 2);
							@include padding-x(5px);
							font-size: 10px;
							letter-spacing: 0.5px;
							font-weight: 400;
							text-transform: uppercase;
							color: white;
							background-color: $def-blue;
						}
					}
				}

				.machine-type-settings {
					margin-top: 18px;
					padding-top: 18px;
					padding-bottom: 0;

				}
			}
		}
	}
}
