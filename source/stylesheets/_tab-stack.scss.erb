@import "default";
@import "constants";

.tab-stack {
	$content-spacing: 10px;

	.stack-settings {
		margin-bottom: 30px;

		article {
			@include padding-y(0);

			section {
				@include padding-y(18px);

				.max-width-wrapper {
					max-width: 550px;
				}
			}
		}

		.notification.stack-error {
			margin-top: 0;
			margin-bottom: $content-spacing;
		}

		.stack-selector-wrapper {
			margin-bottom: $content-spacing;

			.stack-selector {
				width: 100%;
			}
		}

		.stack-info {
			@include display-flex;
			@include align-items(flex-start);
			width: 100%;
			$icon-size: 18px;
			$spacing: 8px;

			.info-badge-wrapper {
				@include margin-x(14px);

				svg {
					display: block;
					@include size($icon-size);
				}
			}

			.stack-info-text {
				@include flex-grow(1);

				.stack-description {
					line-height: 1.5;
					margin-top: 0;
					margin-bottom: $spacing;
					font-size: 13px;
					font-weight: 400;
					color: $def-darkgrey;

					&:not(.ninja) > p:first-child {
						margin-top: 0;
					}
				}

				.stack-info-link {
					font-size: 15px;
					font-weight: 500;
					color: $def-green;

					&:not(:last-child) {
						margin-bottom: 6px;
					}

					&:hover, &:focus {
						text-decoration: underline;
					}
				}

				a.stack-info-link {
					text-decoration: none;
				}
			}
		}

		.docker-image-settings, .den-tag-settings {
			margin-top: 18px;

			.docker-image-label, .den-tag-label {
				display: block;
				margin-bottom: 4px;
				font-size: 13px;
				font-weight: 700;
			}

			.docker-image, .den-tags {
				display: block;
				@include box-sizing(border-box);
				width: 100%;
				border: 1px solid $def-mediumlightgrey;
				@include border-radius($def-radius);
				padding: 7px 12px;
				font-size: 13px;

				&:disabled {
					color: $def-grey;
				}
			}
		}

		.machine-type-settings {
			border-top: 1px solid $def-mediumlightgrey;

			.machine-type-header {
				font-size: 19px;
				font-weight: bold;
				font-style: normal;
				font-stretch: normal;
				line-height: normal;
				letter-spacing: 0.08px;
				color: #222222;
				margin-top: 0;
				margin-bottom: 0;
			}

			.machine-types {
				display: flex;
				flex-direction: row;
				flex-wrap: wrap;

				.machine-type-wrapper {
					position: relative;
					display: flex;
					flex-direction: row;
					width: 100%;
					max-width: 380px;
					min-width: 225px;
					padding: 12px;
					margin-top: 18px;
					margin-right: 18px;
					border-radius: 8px;
					border: 1px solid $def-grey;

					.machine-type-data {
						display: flex;
						flex-direction: column;
						margin-left: 16px;
						overflow: hidden;

						.name {
							font-size: 16px;
							font-weight: bold;
							font-style: normal;
							font-stretch: normal;
							line-height: 1.19;
							letter-spacing: 0.07px;
							margin-right: 28px;
							color: $def-darkgrey;
							@include ellipsis-oneliner;
						}

						.cpu-count, .cpu-description, .cpu-ram {
							font-size: 13px;
							font-weight: 500;
							font-style: normal;
							font-stretch: normal;
							line-height: 1.46;
							letter-spacing: 0.05px;
							color: $def-darkgrey;
							@include ellipsis-oneliner;
						}
					}

					.machine-type-icon svg {
						top: 0px;
						@include size(70px, 70px);
						fill: $def-darkgrey;
					}

					.stack-type-icon svg {
						position: absolute;
						width: 16px;
						height: 18px;
						top: 12px;
						right: 12px;
						fill: $def-darkgrey;
					}

					&.selected {
						border: 1px solid $def-violet_blue;
						background-color: $def-light-grape;

						.machine-type-data {

							.name, .cpu-count, .cpu-description, .cpu-ram {
								color: $rebo-purple-gradient-hover-bottom;
							}
						}

						.machine-type-icon svg, .stack-type-icon svg {
							fill: $rebo-purple-gradient-hover-bottom;
						}
					}

					&:not(.selected):hover {
						cursor: pointer;
						border: 1px solid $def-violet_blue;
						background-color: $def-light-grape;

						.machine-type-data {

							.name, .cpu-count, .cpu-description, .cpu-ram {
								cursor: pointer;
								color: $def-violet_blue;
							}
						}

						.machine-type-icon svg, .stack-type-icon svg {
							fill: $def-violet_blue;
						}
					}
				}
			}
		}
	}

	.stack-settings.default {

		header {

			.header-description {

				a {
					font-weight: 600;
					color: inherit;

					&:hover, &:focus {
						color: $def-green;
					}
				}
			}
		}
	}

	.stack-settings.workflow-specific {

		article {

			.workflow {

				&:not(:last-child) {
					border-bottom: 1px solid $def-mediumlightgrey;
				}

				.workflow-header {
					margin-top: 0;
					margin-bottom: $content-spacing;
					font-size: 16px;
					color: $def-darkgrey;
					font-weight: 400;

					.workflow-id {
						font-weight: 700;
					}
				}

				.stack-selector-wrapper {
					position: relative;

					&:not(.default) label.default-stack {
						display: none;
					}

					&.default {

						.stack-selector {
							padding-right: 90px;
						}

						label.default-stack {
							$badge-height: 14px;

							@include position(absolute, 50%, 30px);
							@include box-sizing(border-box);
							line-height: $badge-height;
							margin-top: - $badge-height / 2;
							@include border-radius($badge-height / 2);
							@include padding-x(5px);
							font-size: 10px;
							letter-spacing: 0.5px;
							font-weight: 400;
							text-transform: uppercase;
							color: white;
							background-color: $def-blue;
						}
					}
				}

				.machine-type-settings {
					margin-top: 18px;
					padding-top: 18px;
					padding-bottom: 0;

				}
			}
		}
	}
}
