@import "default";
@import "constants";

.tab-stack {
	$content-spacing: 10px;

	.stack-settings {
		margin-bottom: 30px;

		article {
			@include padding-y(0);

			section {
				@include padding-y(18px);

				.max-width-wrapper {
					max-width: 550px;
				}
			}
		}

		.notification.invalid-stack {
			margin-top: 0;
			margin-bottom: $content-spacing;
		}

		.stack-selector-wrapper {
			margin-bottom: $content-spacing;

			.stack-selector {
				width: 100%;
			}
		}

		.stack-info {
			@include display-flex;
			@include align-items(flex-start);
			width: 100%;
			$icon-size: 18px;
			$spacing: 8px;

			.info-badge-wrapper {
				@include margin-x(14px);

				svg {
					display: block;
					@include size($icon-size);
				}
			}

			.stack-info-text {
				@include flex-grow(1);

				.stack-description {
					line-height: 1.5;
					margin-top: 0;
					margin-bottom: $spacing;
					font-size: 12px;
					font-weight: 300;
					color: $def-darkgrey;

					&:not(.ninja) > p:first-child {
						margin-top: 0;
					}
				}

				.stack-info-link {
					font-size: 13px;
					font-weight: 500;
					color: $def-green;

					&:not(:last-child) {
						margin-bottom: 6px;
					}

					&:hover, &:focus {
						text-decoration: underline;
					}
				}

				a.stack-info-link {
					text-decoration: none;
				}
			}
		}

		.docker-image-settings {
			margin-top: 18px;

			.docker-image-label {
				display: block;
				margin-bottom: 4px;
				font-size: 12px;
				font-weight: 600;
			}

			.docker-image {
				display: block;
				@include box-sizing(border-box);
				width: 100%;
				border: 1px solid $def-mediumlightgrey;
				@include border-radius($def-radius);
				padding: 7px 12px;
				font-size: 12px;

				&:disabled {
					color: $def-grey;
				}
			}
		}
	}

	.stack-settings.default {

		header {

			.header-description {

				a {
					font-weight: 600;
					color: inherit;

					&:hover, &:focus {
						color: $def-green;
					}
				}
			}
		}
	}

	.stack-settings.workflow-specific {

		article {

			.workflow {

				&:not(:last-child) {
					border-bottom: 1px solid $def-mediumlightgrey;
				}

				.workflow-header {
					margin-top: 0;
					margin-bottom: $content-spacing;
					font-size: 15px;
					color: $def-darkgrey;
					font-weight: 400;

					.workflow-id {
						font-weight: 700;
					}
				}

				.stack-selector-wrapper {
					position: relative;

					&:not(.default) label.default-stack {
						display: none;
					}

					&.default {

						.stack-selector {
							padding-right: 90px;
						}
						
						label.default-stack {
							$badge-height: 14px;

							@include position(absolute, 50%, 30px);
							@include box-sizing(border-box);
							line-height: $badge-height;
							margin-top: - $badge-height / 2;
							@include border-radius($badge-height / 2);
							@include padding-x(5px);
							font-size: 8px;
							letter-spacing: 0.5px;
							font-weight: 300;
							text-transform: uppercase;
							color: white;
							background-color: #029dd8;
						}
					}
				}
			}
		}
	}
}
