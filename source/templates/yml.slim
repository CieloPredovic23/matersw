.tab-yml.menu-content-padding[ng-controller="YMLController as ymlCtrl"]
	section.cardo.warn[ng-if="appService.validationWarnings.length!=0"]
		.icon
		.message
			.title == data[:strings][:yml][:warn][:title]
			ul
				li[ng-repeat="warning in appService.validationWarnings" ng-bind="warning"]
	r-yml-editor-header[
		ng-if="ymlCtrl.modularYamlSupported !== undefined"
		url="ymlCtrl.downloadAppConfigYMLPath()"
		initial-uses-repository-yml="ymlCtrl.usesRepositoryYml"
		app-slug="ymlCtrl.appSlug"
		app-config="ymlCtrl.appConfigYML"
		on-uses-repository-yml-change-saved="ymlCtrl.onUsesRepositoryYmlChangeSaved"
		repository-yml-available="ymlCtrl.repositoryYmlAvailable"
		should-show-yml-storage-settings="ymlCtrl.shouldShowYmlStorageSettings"
		default-branch="ymlCtrl.defaultBranch"
		git-repo-slug="ymlCtrl.gitRepoSlug"
		lines="ymlCtrl.lines"
		split="ymlCtrl.split"
		modular-yaml-supported="ymlCtrl.modularYamlSupported"
		last-modified="ymlCtrl.lastModified"
	]
	section.cardo
		article
			#code-container
